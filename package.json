{
  "name": "backend-application",
  "version": "0.1.0",
  "description": "Backend application for the Racket O Meter platform.",
  "scripts": {
    "clean": "rimraf node_modules coverage .nyc_output",
    "mongodb": "mongod --dbpath=C:/data --port 27017",
    "nodemon": "nodemon --watch dist dist/server.js",
    "ts": "webpack --watch",
    "build": "webpack",
    "postinstall": "webpack",
    "start": "concurrently \"npm run ts\" \"npm run nodemon\"",
    "tslint": "tslint \"src/**/*.ts\"",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "test": "cross-env NODE_ENV=test nyc mocha --opts test/unit.mocha.opts",
    "test:int": "cross-env NODE_ENV=test mocha --opts test/int.mocha.opts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/racketometer/backend-application.git"
  },
  "keywords": [
    "Node.js",
    "Javascript",
    "TypeScript",
    "GraphQL",
    "Express",
    "Apollo",
    "Mocha"
  ],
  "author": "Bjørn Sørensen <https://github.com/crevil>, Jesper O. Christensen <https://github.com/Karnich>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/racketometer/backend-application/issues"
  },
  "homepage": "https://github.com/racketometer/backend-application#readme",
  "dependencies": {
    "body-parser": "1.16.0",
    "cors": "2.8.1",
    "email-validator": "1.0.7",
    "express": "4.14.0",
    "graphql": "0.8.2",
    "graphql-server-express": "0.5.1",
    "graphql-subscriptions": "0.2.2",
    "graphql-tools": "0.9.1",
    "mongoose": "4.6.5",
    "mongoose-seeder": "1.2.1",
    "node-uuid": "1.4.7",
    "nodemailer": "2.7.2",
    "optics-agent": "1.0.5"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/chai": "3.4.34",
    "@types/cors": "2.8.0",
    "@types/mocha": "2.2.38",
    "@types/optics-agent": "1.0.0",
    "@types/sinon": "1.16.34",
    "@types/email-validator": "1.0.30",
    "@types/express": "4.0.35",
    "@types/mongoose": "4.6.2",
    "@types/mongoose-seeder": "1.2.2",
    "@types/node": "6.0.55",
    "@types/node-uuid": "0.0.28",
    "@types/nodemailer": "1.3.32",
    "awesome-typescript-loader": "3.0.0-beta.18",
    "chai": "3.5.0",
    "concurrently": "3.1.0",
    "coveralls": "2.11.15",
    "cross-env": "3.1.4",
    "istanbul": "0.4.5",
    "mocha": "3.2.0",
    "nodemon": "1.11.0",
    "nyc": "10.1.2",
    "raw-loader": "0.5.1",
    "rimraf": "2.5.4",
    "sinon": "1.17.7",
    "ts-node": "2.0.0",
    "tslint": "4.3.1",
    "typescript": "2.1.5",
    "webpack": "1.14.0"
  }
}
